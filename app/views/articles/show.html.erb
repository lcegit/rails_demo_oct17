<h2><%= @article.title %></h2>
<p><%= @article.content %></p>

<%= form_with url: article_comments_path(@article) do |form| %>
  <%= form.label :email %>
  <%=form.text_field :email %>
  <%=form.label :comment %>
  <%=form.text_field :comment %>
  <%= form.submit 'Create comment' %>
<% end %>

<% if @article.comments.any? %>
  <% @article.comments.each do |comment| %>
  <p><%= comment.body %></p>
  <p><%= "Comment by: #{comment.email}"%></p>
  <% end %>
<% end %>
